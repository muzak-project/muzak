#!/usr/bin/env ruby

require "muzak"
require "socket"
require "json"
require "shellwords"

begin
  server_host = Muzak::Config.daemon_host
  server_port = Muzak::Config.daemon_port
  sock = TCPSocket.new server_host, server_port
rescue
  error = { response: { error: "muzak is not running" } }.to_json
  puts error
  exit 1
end

sock.puts Shellwords.shelljoin ARGV
puts sock.gets
sock.close
